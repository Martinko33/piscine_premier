{% extends "base_artiklos.html.twig" %}
{% block title %}
    Magnifique articles
{% endblock title %}


{% block main %}
    <article class="article">
        {% if artiklos | length > 0 %}
            {% for artikl in artiklos %}
                <div class="container_article">
                    <a href="{{ path("display_artikl",{'id' : artikl.id}) }}">
                        <img src="{{ artikl.image }}" alt="{{ artikl.title }}" class="image" >
                        <h2>{{ artikl.title }}</h2>
                        <p>{{ artikl.content }}</p>
                        <span>{{ artikl.createdAt |date("F jS \\a\\t g:ia") }}</span>
                    </a>
                </div>
            {% endfor %}
        {% else %}
            <div class="recherche_null">
                <p> il y a pas article correspondant a la rechcerche</p>
            </div>
        {% endif %}
    </article>
{% endblock main %}